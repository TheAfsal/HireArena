{
  "compilerOptions": {
    "target": "ES2021",                           // ES target version (can be ES2020 or ESNext)
    "module": "CommonJS",                         // CommonJS module system (default for Node.js)
    "moduleResolution": "node",                   // Use Node module resolution strategy
    "esModuleInterop": true,                      // Enables esModuleInterop for compatibility with CommonJS modules
    "skipLibCheck": true,                         // Skip type checking of declaration files
    "strict": true,                               // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,     // Ensure consistent file casing
    "outDir": "./dist",                           // Output directory for compiled files
    "baseUrl": ".",                               // Base directory to resolve non-relative module imports
    "paths": {
         "*": ["node_modules/*"]        
    },
    "skipDefaultLibCheck": true,                  // Skip checking default lib files (node_modules)
    "noImplicitAny": false,                       // Allow implicit 'any' type in variables
    "resolveJsonModule": true,                    // Enable importing .json files
  },
  "include": [
    "src/**/*.ts",                                // Include all TypeScript files in the src folder
    "src/app.ts",                                 // Include main entry file
    "src/server.ts"                               // Include server.ts if it's your entry point
  ],
  "exclude": [
    "node_modules",                               // Exclude node_modules folder
    "dist",                                       // Exclude dist folder (compiled code)
    "test",                                       // Exclude test folder (if exists)
    "**/*.test.ts"                                // Exclude test files (if exists)
  ]
}