{
  "compilerOptions": {
    "target": "ES2021",                           
    "module": "CommonJS",                        
    "moduleResolution": "node",                  
    "esModuleInterop": true,                      
    "skipLibCheck": true,                         
    "strict": true,                               
    "forceConsistentCasingInFileNames": true,     
    "outDir": "./dist",                           
    "baseUrl": ".",                               
    "paths": {
         "*": ["node_modules/*"]        
    },
    "skipDefaultLibCheck": true,                  
    "noImplicitAny": false,                       
    "resolveJsonModule": true,                  
  },
  "include": [
    "src/**/*.ts",                                 
    "src/app.ts",                                 
    "src/server.ts"
  ],
  "exclude": [
    "node_modules",                               
    "dist",                                      
    "test",                                       
    "**/*.test.ts"                                
  ]
} 